doctype html
html
	head
		title #{page.title}
		meta(charset="utf-8")
		link(rel="icon" type="image/png" href="/layout/img/logo.png")
		link(rel="stylesheet" type="text/css" href="/bootstrap-3.3.6-dist/css/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="/bootstrap-3.3.6-dist/css/bootstrap-theme.min.css")
		link(rel="stylesheet" type="text/css" href="/layout/css/main.css")
	body
		block menu
			div(class="container")
				nav(class="navbar navbar-inverse navbar-fixed-top " id="u-navbar")
					div(class="container")
						div(class="navbar-header")
							button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse")
								span(class="icon-bar")
								span(class="icon-bar")
								span(class="icon-bar")
							a(href="/home")
								img(class="navbar-brand logo" src="/layout/img/logo.png")
							a(href="/logout")
										span(class="navbar-brand glyphicon glyphicon-log-out menu")  Deconnecter
							img(class="navbar-brand profil-pic-icon circle" alt="profil picture" src="#{user.profil_pic}")
						div(class="collapse navbar-collapse" id="navbar-collapse")
							ul(class="nav navbar-nav" id="m-p")
								li
									a(href="/home")
										span(class="glyphicon glyphicon-home")  Acceuil
								li
									a(href="/contact")
										span(class="glyphicon glyphicon-user")
											span(class="glyphicon glyphicon-user ")  Contact
											if menu.newcont_nbr!=0
												span(class="badge") #{menu.newcont_nbr}
								li
									a(href="/allusers")
										span(class="glyphicon glyphicon-user")
											span(class="glyphicon glyphicon-user ")  Utilisateurs
								li
									a(href="/message")
										span(class="glyphicon glyphicon-envelope")  Messages
										if menu.newmsg_nbr!=0
											span(class="badge") #{menu.newmsg_nbr}
								li
									a(href="/profil/"+user._id)
										span(class="glyphicon glyphicon-user")  Profil
								//li
								//	form(method="post" action="/search")
								//		div(class="input-group search")
								//			input(type="text" class="form-control" placeholder="Rechercher Pseudo" name="key")
								//			span(class="input-group-btn")
								//				button(class="btn btn-default glyphicon glyphicon-search" type="submit")
		block title
			div(class="container")
				section
					div(class="page-header my-title")
						h4(class="classic") #{page.name}	
							if page.servermsg!=''
								small
									a(href="" class="btn btn-info btn-danger btn-error visible")
										span(class="glyphicon glyphicon-exclamation-sign")  #{page.servermsg}
							small(class="btn-new-msg")
								span(class="glyphicon glyphicon-envelope")
									span(class="glyphicon glyphicon-plus")  
		div(id="contenu" class="container round")
			div(id="post-msg" class="hidden")
				div(id="form-post-msg")
					form(method="POST" action="/processmsg")
						div(class="input-group")
							input(class="form-control destination hidden" type="email" placeholder="Destinateur" name="destination")
							textarea(class="form-control" placeholder="messages" aria-describedby="basic-addon1" name="msg_content" autofocus)
						button(class="btn btn-primary" type="submit") Envoi
			block content
		script(type="text/javascript" src="/bootstrap-3.3.6-dist/js/jquery-2.1.3.min.js")
		script(type="text/javascript" src="/bootstrap-3.3.6-dist/js/bootstrap.min.js")
		script(type="text/javascript" src="/layout/js/socket.io.js")
		script(type="text/javascript" src="/layout/js/main.js")